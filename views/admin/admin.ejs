<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-md-3 customer-list-container">
                <h3 class="text-center mt-3">Sohbetler</h3>
                <hr>
                <input type="text" id="searchInput" class="form-control mt-3" placeholder="Müşteri Ara">
                <table>
                    <tbody id="customer-list">
                        <% customers.reverse().forEach(customer => { %>
                            <tr class="d-flex justify-content-between border-bottom p-2 allCustomer">
                                <td class="customerList" dataId="<%= customer.id %>">
                                    <% if (messages.find(message => message.customerId === customer.id && message.isRead === false)) { %>
                                        <span class="unread"></span>
                                    <% } %>
                                    <span id="customerName" class="customerName"> <%= customer.name %></span>
                                    <p class="last-message">
                                        <% const customerMessages = messages.filter(message => message.customerId === customer.id); %>
                                        <% if (customerMessages.length > 0) { %>
                                            <%= customerMessages[customerMessages.length - 1].message %>
                                        <% } %>
                                    </p>
                                </td>
                                <td>
                                    <form action="/admin" method="POST" class="delete-form">
                                        <input type="hidden" name="id" value="<%= customer.id %>">
                                        <button type="submit" class="deleteCustomer btn btn-sm btn-danger">X</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
            <div class="col-12 col-md-9 chat-container">
                <div class="support-chat-widget" id="chat-widget">
                    <div class="chat-header" id="toggle-chat">
                        <h4 class="text-center">Destek Paneli</h4>
                    </div>
                    <div class="chat-body">
                        <ul id="messages"></ul>
                        <div id="typingIndicator" style="display:none;"></div>
                        <div class="scroll-bottom">
                            <i class="bi bi-arrow-down-circle"></i>
                        </div>
                        <form id="form" action="" class="float-start">
                            <input id="input" autocomplete="off" class="form-control mt-3" placeholder="Mesajınız"/>
                            <button type="submit" class="btn btn-primary w-100 mt-1">Send</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/static/js/chat.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/static/js/adminChat.js"></script>
    <script src="/static/js/searchBar.js"></script>
</body>
</html>
