<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

<body>
    <%- include('../partials/nav') %>
    <div class="container mt-5">
        <div class="row">
            <h4 class="text-center"><b>Ã–nerilen Mesajlar</b></h4>
            <table class="table table-bordered">
                <thead>
                  <tr>
                   <th>Mesaj</th>
                   <th><a href="/admin/suggestion-create" class="btn text-success float-end">Ekle</a></th>
                  </tr>
                </thead>
                <tbody>
                    <% suggestions.forEach(suggestion => { %>
                        <tr>
                           <td><%= suggestion.message %></td>
                           
                           <td class="d-flex justify-content-around">
                            <a href="/admin/delete-suggestion/<%= suggestion.id %>" class="btn"><i class="bi bi-trash" style="font-size: 20px;"></i></a>
                            <a href="/admin/edit-suggestion/<%= suggestion.id %>" class="btn"><i class="bi bi-pencil-square" style="font-size: 20px;"></i></a>
                        </td>
                        </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <%- include('../partials/script') %>
 
</body>
</html>
