<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

<body>
    <div class="chat-widget">
        <div class="chat-header" id="toggle-chat">
            <h6>Canlı Destek <i class="bi bi-headset" id="headSet"></i></h6>
        </div>
        <audio id="notificationSound" autoplay>
            <source src="/static/audio/arriving.mp3" type="audio/mpeg">
        </audio>
        <button id="notificationSoundButton" style="display: none;"></button>
        <div class="chat-body">
            <ul id="messages" class="mb-3">
            <emoji-picker class="emoji-picker"></emoji-picker>

            </ul>
            <div id="typingIndicator" style="display:none;"></div>
            <div class="scroll-bottom">
                <i class="bi bi-arrow-down-circle"></i>
            </div>

            <form id="form" action="" class="formArea">
                <input type="text" class="form-control" placeholder="adınız" id="name">
                <div class="input-group">
                    <input id="input" autocomplete="off" class="form-control message messageInput" placeholder="Mesajınız">
                    <button type="button" id="emojiButton" class="btn btn-outline-secondary"><i class="bi bi-emoji-smile"></i></button>
                    <label for="fileInput" class="btn btn-outline-secondary"><i class="bi bi-file-earmark-arrow-up"></i></label>
                    <input type="file" id="fileInput" style="display:none;">
                </div>
                <button type="submit" class="btn btn-primary w-100 mt-1">Gönder</button>
            </form>
        </div>
    </div>
    
    <script src="/static/js/chat.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/static/js/userChat.js"></script>
    <script src="/static/js/emoji.js"></script>
</body>
</html>
